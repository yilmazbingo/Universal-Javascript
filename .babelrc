{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": { "esmodules": true },
        "debug": true,
        "useBuiltIns": "usage"
      }
    ],
    "@babel/preset-react"
  ],
  "plugins": ["transform-class-properties", "babel-plugin-styled-components"]
}
